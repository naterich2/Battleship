package battleship;

public class Ship{
    private int length, xpos, ypos, health;
    private boolean vertical, alive;
    public Ship(int length, int xpos, int ypos, boolean vertical){
        this.length = length;
        this.xpos = xpos;
        this.ypos = ypos;
        this.vertical = vertical;
        alive = true;
        health = length;
    }
    public void Hit(int xpos, int ypos);
    public static Ship randShip(){
        int l, x, y, v;
        boolean v1;
        v = (int) Math.random()*2;
        x = (int) Math.Random*9+1;
        y = (int) Math.Random*9+1;
        int [] lpossibilities = new int[4];
        lpossibilities[0] = 2;
        lpossibilities[1] = 4;
        lpossibilities[2] = 5;
        lpossibilities[3] = 6;
        l = lpossibilities[(int) Math.random()*4];
        if(v == 1)
            v1 = true;
        else 
            v1 = false;
        Ship s = new Ship(l,x,y,v1);
        return s;
    }
}
    

    
